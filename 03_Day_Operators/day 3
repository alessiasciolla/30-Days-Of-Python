x1, y1 = 2, 2
x2, y2 = 6, 10
slope_points = (y2 - y1) / (x2 - x1)
distance = math.sqrt((x2 - x1)**2 + (y2 - y1)**2)
print(f"Slope between the points: {slope_points}")
print(f"Euclidean distance between the points: {distance}")
